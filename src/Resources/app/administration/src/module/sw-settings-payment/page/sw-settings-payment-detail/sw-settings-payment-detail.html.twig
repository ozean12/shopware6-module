{% block sw_settings_payment_detail_content_card %}
    {% parent %}

    {% block billie_payment_config_content %}
        <sw-card v-if="paymentMethod && paymentMethod.extensions.billieConfig != null"
                 class="billie--payment-config--card"
                 :title="$tc('billie.paymentConfig.card.title')"
                 :isLoading="isLoading">
            <template v-if="!isLoading">

                {% block billie_payment_config_fields %}
                    <sw-number-field
                        type="number"
                        :label="$tc('billie.paymentConfig.fields.duration.label')"
                        v-model:value="paymentMethod.extensions.billieConfig.duration"
                        numberType="int"
                        min="1"
                    ></sw-number-field>
                {% endblock %}
            </template>
        </sw-card>
    {% endblock %}
{% endblock %}
