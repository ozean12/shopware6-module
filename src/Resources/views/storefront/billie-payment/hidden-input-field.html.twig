{% if page.extensions.billie_payment.widget %}
    {% set billieCheckoutOptions = page.extensions.billie_payment.widget|merge({
        csrfToken: billie_sw_csrf("billie-payment.checkout.update-addresses", {"mode": "token"})
    }) %}

    <input
        name="billie_payment[session-id]"
        type="hidden"
        data-billie-checkout="true"
        data-billie-checkout-options='{{ billieCheckoutOptions|json_encode }}'
        form="confirmOrderForm"
    />
{% endif %}
