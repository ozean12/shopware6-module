<sw-card class="billie-payment-order-data-card"
         :title="$tc('billie.orderData.cart.title')"
         v-if="order.extensions.billieData"
         positionIdentifier="order-details-billie-card">
    {% block billie_payment_order_data %}
        <sw-container columns="repeat(auto-fit, minmax(250px, 1fr))" gap="30px 30px">

            <sw-description-list columns="1fr" grid="1fr">
                <dt>{{ $tc('billie.orderData.fields.referenceId.label') }}</dt>
                <dd>{{ order.extensions.billieData.referenceId }}</dd>
            </sw-description-list>

            <sw-description-list columns="1fr" grid="1fr">
                <dt>{{ $tc('billie.orderData.fields.externalInvoiceNumber.label') }}</dt>
                <dd>
                    <sw-text-field v-model="order.extensions.billieData.externalInvoiceNumber"></sw-text-field>
                </dd>
            </sw-description-list>

            <sw-description-list columns="1fr" grid="1fr">
                <dt>{{ $tc('billie.orderData.fields.externalInvoiceUrl.label') }}</dt>
                <dd>
                    <sw-text-field v-model="order.extensions.billieData.externalInvoiceUrl"></sw-text-field>
                </dd>
            </sw-description-list>

            <sw-description-list columns="1fr" grid="1fr">
                <dt>{{ $tc('billie.orderData.fields.externalDeliveryNoteUrl.label') }}</dt>
                <dd>
                    <sw-text-field v-model="order.extensions.billieData.externalDeliveryNoteUrl"></sw-text-field>
                </dd>
            </sw-description-list>

        </sw-container>
    {% endblock %}
</sw-card>
